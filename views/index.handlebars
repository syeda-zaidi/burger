<div class="container jumbotron">
    <h1 id="first-heading" class="text-center"> Here is A Menu of Best Burgers In Town</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4> To be devoured </h4>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h4> Here Lies The Devoured (RIP)</h4>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12" id="newburgerForm">
            {{!-- <form action="/api/burgers" method="POST"> --}}
            <form id="form-id">
                <input type="text" id="burger-input" name="burger_name" placeholder=""">
                <button type="submit" class="addButton">Add Your Meal!</button>
            </form>
        </div>
    </div>

</div>