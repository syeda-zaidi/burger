<div class="container jumbotron">
    <h1 id="first-heading" class="text-center"> Here is A Menu of Best Burgers In Town</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4> To be devoured </h4>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h4> Here Lies The Devoured (RIP)</h4>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">

        <form>
            <div class="form-group">
                <label for="newburgerInput">Add New Burger</label>
                <input type="text" class="form-control" id="newburgerInput" placeholder="">
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="1" id="devouredcheck">
                <label class="form-check-label" for="devouredcheck">
                    Devoured
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>

</div>